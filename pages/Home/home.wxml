<scroll-view class="scroll-view_H" scroll-y="true" bindscroll="scroll" style="width: 100%">
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgUrls}}" wx:key="*this">
      <swiper-item>
        <image src="{{item}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>
  <view class='buttonView'>
    <block wx:for="{{buttonImages}}">
      <image class='buttonImage' wx:if="{{item}}" src="{{item}}" mode='aspectFit'></image>
    </block>

  </view>
  <view class='buttonTitleView'>
       <block wx:for="{{buttonTitles}}">
      <text class='buttonTitle'>{{item}}</text>
    </block> 
  </view>
  <!-- 公告 -->
  <view class="marquee" wx:if="{{text}}">
    <view class="marquee_box">
      <view class='marquee_logo'>
        <image src='/image/公告.png' mode='widthFix' style='width: 20px; height: 20px;'></image>
      </view>
      <view class="marquee_text" style="{{orientation}}:{{marqueeDistance}}px; font-size: {{size}}px;">
        {{text}}
      </view>
    </view>
  </view>

</scroll-view>