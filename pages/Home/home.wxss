/* 轮播图 */
.slide-image{
  width: 100%;
  height: 300rpx;
}
/* 菜单 */
.buttonView{
  background-color: white;
  width: 100%;
  height: 160rpx;
  display: flex;
  flex-direction: row ;
  align-content:space-around;
}
.buttonImage{
  margin-top: 20rpx;
  background-color: white;
  flex: 1;
  width: 120rpx;
  height: 120rpx;
}
.buttonTitleView{
  background-color: white;
  width: 100%;
  height: 30px;
  display: flex;
  flex-direction: row ;
  align-content:space-around;
}
.buttonTitle{
  height: 30px;
  text-align: center;
  font-size: 16px;
  flex: 1;
  color: #656565;
}
/* 跑马灯 */
.marquee {
  display: block;
  width: 100%;
  height: 40px;
  line-height: 40px;
  border-top-color: whitesmoke;
  border-top-width: 0.3;
  border-top-style: solid;
  border-bottom-color: whitesmoke;
  border-bottom-width: 0.3;
  border-bottom-style: solid;
}

.marquee_box {
  width: 100%;
  position: relative;
}

.marquee_logo {
  position: absolute;
  height: 40px;
  padding: 5px; 
  z-index: 100;
  box-sizing: border-box;
  background-color: white;
}
.marquee_text {
  color: #656565;
  white-space: nowrap;
  position: absolute;
  height: 40px;
  top: 0;
}